<view class="container">
<view bindtap="bindViewTap" class="userinfo">
 <image class="userinfo-avater" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
</view>
<view>
<text class="userinfo-nickname">{{userInfo.nickName}} (é™ˆ)</text>
</view>
<view class="usermotto">
